@page
@model TheArmory.Web.Pages.Auth.Index

@{
    ViewData["Title"] = "Авторизация";
}

<div class="container mt-5">
    <h1 class="text-center">Авторизация</h1>
    <form method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="Command.Login" class="form-label">Логин:</label>
            <input type="text" asp-for="Command.Login" class="form-control" required>
            <span asp-validation-for="Command.Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Command.Password" class="form-label">Пароль:</label>
            <input type="password" asp-for="Command.Password" class="form-control" required>
            <span asp-validation-for="Command.Password" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" id="RememberMe" asp-for="Command.RememberMe" class="form-check-input">
            <label for="RememberMe" class="form-check-label">Запомнить меня</label>
        </div>
        <button type="submit" class="btn btn-primary">Войти</button>
        <div class="mt-3">
            <a asp-page="/Auth/Registration">Регистрация</a> |
            <a asp-page="/Auth/PasswordRecovery">Забыли пароль?</a>
        </div>
    </form>
</div>
