@page "/Auth/Register"
@model TheArmory.Web.Pages.Auth.Registration

@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <h1 class="text-center">Регистрация</h1>
    <form method="post" class="mt-4">
        <div class="mb-3">
            <label class="form-label">Имя:</label>
            <input type="text" asp-for="Command.Name" class="form-control" required>
            <span asp-validation-for="Command.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Номер телефона:</label>
            <input type="text" asp-for="Command.PhoneNumber" class="form-control" required>
            <span asp-validation-for="Command.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="email" asp-for="Command.Email" class="form-control" required>
            <span asp-validation-for="Command.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль:</label>
            <input type="password" asp-for="Command.Password" class="form-control" required>
            <span asp-validation-for="Command.Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Подтвердите пароль:</label>
            <input type="password" asp-for="Command.PasswordConfirm" class="form-control" required>
            <span asp-validation-for="Command.PasswordConfirm" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        <div class="mt-3">
            <a asp-page="/Auth/Index">Отмена</a> |
        </div>
    </form>
</div>
