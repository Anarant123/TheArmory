@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="icon" type="image/png" href="~/favicon.png"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TheArmory.Web.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 container-fluid px-3 px-md-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Ads/Index">
                    <img src="~/favicon.png" alt="Logo" style="width: 30px; height: 30px; margin-right: 10px;"/>
                    TheArmory
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <li class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Ads/Index"><i class="bi bi-card-list"></i> Объявления</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/Privacy"><i class="bi bi-file-earmark-text"></i> Правила сайта</a>
                    </li>
                
                    @if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Client")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Publication/Index"><i class="bi bi-card-checklist"></i> Разместить объявление</a>
                        </li>
                    }
                    @if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Admin/Index"><i class="bi bi-exclamation-triangle"></i> Жалобы</a>
                        </li>
                    }
                    @if (User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "SuperAdmin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/SuperAdmin/Index"><i class="bi bi-people"></i> Администраторы</a>
                        </li>
                    }
                </ul>
                
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity is {IsAuthenticated: true })
                    {
                        <li class="nav-item dropdown">
                            <button class="btn btn-secondary btn-sm btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> 
                                Профиль
                            </button>
                            <ul class="dropdown-menu">
                                <a class="dropdown-item" asp-page="/Account/PersonalInfo"><i class="bi bi-person-circle"></i> Личная информация</a>
                                <a class="dropdown-item" asp-page="/Ads/Favorites"><i class="bi bi-heart"></i> Избранное</a>
                                <a class="dropdown-item" asp-page="/Account/ChangePassword"><i class="bi bi-key-fill me-2"></i> Сменить пароль</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-page="/Account/DeleteAccount"><i class="bi bi-trash"></i> Удалить аккаунт</a>
                                <form method="post" asp-page="/Account/PersonalInfo" asp-page-handler="Exit">
                                    <button class="dropdown-item" type="submit"><i class="bi bi-box-arrow-right"></i> Выйти</button>
                                </form>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link text-dark px-3 rounded-left" asp-page="/Auth/Index"><i class="bi bi-box-arrow-in-right"></i> Войти</a>
                            |
                            <a class="nav-link text-dark px-3 rounded-right" asp-page="/Auth/Registration"><i class="bi bi-person-plus"></i> Зарегистрироваться</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - TheArmory - <a asp-area="" asp-page="/Privacy">Правила сайта</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
