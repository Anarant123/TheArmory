<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TheArmory.Web.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Ads/Index">TheArmory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Ads/Index">Объявления</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Правила сайта</a>
                        </li>
                        
                        @if (User.Identity is {IsAuthenticated: true })
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Favorites">Избранное</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Publication/Index">Разместить объявление</a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity is {IsAuthenticated: true })
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/PersonalInfo">Профиль</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Auth/Index">Войти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Auth/Registration">Зарегистрироваться</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - TheArmory - <a asp-area="" asp-page="/Privacy">Правила сайта</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>