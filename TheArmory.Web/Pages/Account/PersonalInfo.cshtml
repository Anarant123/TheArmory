@page
@model TheArmory.Web.Pages.Account.PersonalInfo

@{
    ViewData["Title"] = "Персональная информация";
    Layout = "/Account/Index";
}

<div class="container mt-5">
    <h1>Персональная информация</h1>
    <form>
        <div>
            <label for="name">Название:</label>
            <input type="text" id="name" name="name" value="@Model.User.Name" readonly>
        </div>
        <div>
            <label for="phoneNumber">Номер телефона:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="@Model.User.PhoneNumber" readonly>
        </div>
        <div>
            <label for="email">Электронная почта:</label>
            <input type="email" id="email" name="email" value="@Model.User.Email" readonly>
        </div>
        <div>
            <label for="registrationDateTime">Дата регистрации:</label>
            <input type="text" id="registrationDateTime" name="registrationDateTime" value="@Model.User.RegistrationDateTime" readonly>
        </div>
        <div>
            <label for="regionId">Id региона:</label>
            <input type="text" id="regionId" name="regionId" value="@Model.User.RegionId" readonly>
        </div>
        <div>
            <label for="statusId">Id статуса:</label>
            <input type="text" id="statusId" name="statusId" value="@Model.User.StatusId" readonly>
        </div>
    </form>
</div>
