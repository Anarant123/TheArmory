@model TheArmory.Domain.Models.Responce.ViewModels.Ad.TileAdViewModel

<style>
    .card-img-top {
        object-fit: cover;
        height: 150px; 
        width: 100%;
    }
    .card-body {
        padding: 10px;
    }
    .card-title {
        font-size: 1rem;
    }
    .card-text {
        font-size: 0.875rem;
    }
    .card-link {
        text-decoration: none;
        color: black;
    }
    .card-link:hover .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>

<a href="@Url.Page("/Ads/AdInfo", new { handler = "Select", id = Model.Id })" class="card-link">
    <div class="card border-0 shadow-sm">
        <div class="image-container">
            @if (Model.Images.Count > 0)
            {
                <img src="@(Model.BaseUrl + '/' + Model.Images.First().LocalPath)" class="card-img-top current-image" alt="Фотография объявления">
            }
            else
            {
                <img src="/Default/Images/Ad/DefoultAdImage.png" class="card-img-top current-image" alt="Фотография объявления">
            }
        </div>
        <div class="card-body">
            <h6 class="card-title fw-bold mb-1">@Model.Name</h6>
            <p class="card-text mb-1"><small class="text-muted">Цена:</small> @Model.Price ₽</p>
            <p class="card-text mb-2">
                <small class="text-muted">Опубликовано:</small> @Model.CreationDateTime.Date.ToString("dd.MM.yyyy")
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="bi bi-eye-fill me-1"></i>
                    <p class="card-text mb-0">@Model.CountOfViews</p>
                </div>
                <p class="card-text mb-0 text-success">
                    <i class="bi bi-arrow-up-short"></i> @Model.CountOfViewsToday
                </p>
            </div>
        </div>
    </div>
</a>